<?xml version="1.0" encoding="UTF-8"?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.com.magicsoft.olive.music.dal.database.SysInternalUserMapper">
<!--设置domain类和数据库中表的字段一一对应，注意数据库字段和domain类中的字段名称不致，此处一定要！-->
    <resultMap id="BaseResultMap" type="cn.com.magicsoft.olive.music.model.SysInternalUserMapper">
        <result column="user_id" property="UserId" jdbcType="TINYINT" />
        <result column="user_account" property="UserAccount" jdbcType="CHAR" />
        <result column="user_name" property="UserName" jdbcType="CHAR" />
        <result column="password" property="Password" jdbcType="CHAR" />
        <result column="invalid" property="Invalid" jdbcType="TINYINT" />
    </resultMap>
    <!-- 查询单条记录 -->
    <select id="getOne" resultMap="BaseResultMap">
        SELECT * 
        FROM sys_internal_user
        where id = ${id,jdbcType=INTEGER} 
    </select>
    
    <select id="getAll" resultMap="BaseResultMap">
        SELECT * FROM sys_internal_user
    </select>
</mapper>